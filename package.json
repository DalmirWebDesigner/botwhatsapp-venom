{
  "name": "botwhatsapp",
  "version": "2.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=16 <=18.18.2"
  },
  "keywords": [
    "bot",
    "venom-bot",
    "whatsapp"
  ],
  "lint-staged": {
    "*.ts": [
      "pretty-quick",
      "eslint --ext .ts src --fix --quiet"
    ]
  },
  "scripts": {
    "start": "node build/server.js",
    "dev": "tsnd --transpile-only --inspect=9229 ./src/server",
    "build": "tsup src --out-dir build",
    "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "npm link vitest-environment-prisma",
    "test": "vitest run -c vitest.unit.config.ts",
    "test:watch": "vitest -c vitest.unit.config.ts",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:e2e": "vitest run -c vitest.e2e.config.ts",
    "test:e2e:watch": "vitest -c vitest.e2e.config.ts",
    "pretest:coverage": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:coverage": "vitest run --coverage -c vitest.coverage.config.ts",
    "test:ui": "vitest --ui",
    "studio": "npx prisma studio -b firefox -p 5173",
    "generate": "npx prisma generate",
    "migrate": "npx prisma migrate dev",
    "seed": "npx prisma db seed",
    "prepare": "npx husky install"
  },
  "devDependencies": {
    "@rocketseat/commitlint-config": "0.0.3",
    "@rocketseat/eslint-config": "^2.1.0",
    "@types/module-alias": "2.0.4",
    "@types/node": "20.5.7",
    "@types/supertest": "2.0.12",
    "@types/qrcode-terminal": "0.12.2",
    "@vitest/coverage-c8": "0.33.0",
    "@vitest/coverage-v8": "0.34.3",
    "@vitest/ui": "0.34.3",
    "dotenv-cli": "7.3.0",
    "eslint": "^8.48.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "pretty-quick": "3.1.3",
    "prisma": "5.2.0",
    "prisma-erd-generator": "1.11.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "tsup": "7.2.0",
    "typescript": "5.2.2",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.34.3"
  },
  "dependencies": {
    "@commitlint/cli": "17.7.1",
    "@prisma/client": "5.2.0",
    "dotenv": "16.3.1",
    "module-alias": "2.2.3",
    "pino": "8.15.0",
    "pino-pretty": "10.2.0",
    "qrcode-terminal": "0.12.0",
    "whatsapp-web.js": "1.23.0",
    "zod": "3.22.4"
  }
}
